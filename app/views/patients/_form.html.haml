= form_for(@patient) do |f|
  - if @patient.errors.any?
    #error_explanation.noprint
      %h2
        = pluralize(@patient.errors.count, "error")
        prohibited this patient from being saved:
      %ul
        - @patient.errors.full_messages.each do |msg|
          %li= msg
  .field
    = f.label :mlc_status
    %br/
    = f.radio_button :mlc_status, true, :checked => true
    MLC
    \#{f.radio_button :mlc_status, false} Non-MLC
  .field
    = f.label :first_name
    %br/
    = f.text_field :first_name
  .field
    = f.label :last_name
    %br/
    = f.text_field :last_name
  .field
    = f.label :age
    %br/
    = f.text_field :age
  .field
    = f.label :gender
    %br/
    = f.radio_button :gender_boolean, false, :checked => true
    Male
    \#{f.radio_button :gender_boolean, true} Female
  .field
    = f.label :relation
    %br/
    = f.text_field :relation
  .field
    = f.label :address
    %br/
    = f.text_area :address
  .actions
    = f.submit